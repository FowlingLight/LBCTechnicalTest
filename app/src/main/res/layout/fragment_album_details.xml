<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="album"
            type="com.example.lbctechnicaltest.models.Album" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/album_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_track_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/album_info_bar"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="10"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitems="@layout/item_album" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/album_info_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin">

                    <ImageView
                        android:id="@+id/item_album_image_first"
                        android:layout_width="@dimen/album_image_size"
                        android:layout_height="@dimen/album_image_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_broken_image_24" />

                    <ImageView
                        android:id="@+id/item_album_image_second"
                        android:layout_width="@dimen/album_image_size"
                        android:layout_height="@dimen/album_image_size"
                        app:layout_constraintStart_toEndOf="@id/item_album_image_first"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_broken_image_24" />

                    <ImageView
                        android:id="@+id/item_album_image_third"
                        android:layout_width="@dimen/album_image_size"
                        android:layout_height="@dimen/album_image_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_album_image_first"
                        tools:src="@drawable/ic_broken_image_24" />

                    <ImageView
                        android:id="@+id/item_album_image_fourth"
                        android:layout_width="@dimen/album_image_size"
                        android:layout_height="@dimen/album_image_size"
                        app:layout_constraintStart_toEndOf="@id/item_album_image_third"
                        app:layout_constraintTop_toBottomOf="@id/item_album_image_second"
                        tools:src="@drawable/ic_broken_image_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_album_image_second"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/album_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|bottom"
                            android:text="@{@string/album_name(album.id)}"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="Title" />

                        <TextView
                            android:id="@+id/album_track_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@plurals/album_track_count(album.trackList.size(), album.trackList.size())}"
                            android:textColor="@color/white"
                            tools:text="15 songs" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>