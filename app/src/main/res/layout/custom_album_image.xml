<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_album_image_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/item_album_image_first"
            android:layout_height="@dimen/album_image_size"
            android:layout_width="@dimen/album_image_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_broken_image_24" />

        <ImageView
            android:id="@+id/item_album_image_second"
            android:layout_height="@dimen/album_image_size"
            android:layout_width="@dimen/album_image_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_album_image_first"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_broken_image_24" />

        <ImageView
            android:id="@+id/item_album_image_third"
            android:layout_height="@dimen/album_image_size"
            android:layout_width="@dimen/album_image_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_album_image_first"
            tools:src="@drawable/ic_broken_image_24" />

        <ImageView
            android:id="@+id/item_album_image_fourth"
            android:layout_height="@dimen/album_image_size"
            android:layout_width="@dimen/album_image_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_broken_image_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>